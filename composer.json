{
    "name": "mtk/releaser",
    "description": "Generate CHANGELOG.md file from developers changes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mateusz Cholewka",
            "email": "mateusz@cholewka.com.pl"
        }
    ],
    "bin": ["bin/releaser"],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "phlak/semver": "^3.2",
        "myclabs/php-enum": "^1.7",
        "munusphp/munus": "^0.4.0",
        "webmozart/assert": "^1.9",
        "symfony/filesystem": "^5.1",
        "guzzlehttp/guzzle": "^7.0",
        "mrrio/shellwrap": "^0.4.1",
        "hassankhan/config": "^2.1",
        "mnapoli/silly-php-di": "^1.2",
        "symfony/yaml": "^5.2@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "v3.4.0",
        "phpstan/phpstan": "^0.12.42",
        "phpmd/phpmd": "^2.11.1",
        "symplify/easy-coding-standard": "10.1.0",
        "composer/xdebug-handler": "^2.0"
    },
    "autoload": {
        "psr-4": { "MTK\\Releaser\\": "src/" },
        "files": [ "config/services.php" ]
    },
    "autoload-dev": {
        "psr-4": { "MTK\\Releaser\\Tests\\": "tests/" },
        "files": [
            "config/dev_services.php",
            "tests/Fixture/ChangeFixture.php",
            "tests/Fixture/ReleaseFixture.php",
            "tests/Fixture/CommandFixture.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "sniffer": "ecs check src tests",
        "phpstan": "phpstan analyse src tests",
        "lint": [
            "@sniffer",
            "@phpstan"
        ],
        "check": [
            "@lint",
            "@test"
        ],
        "fix": [
            "@sniffer --fix"
        ]
    }
}
