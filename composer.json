{
    "name": "mtk/releaser",
    "description": "Generate CHANGELOG.md file from developers changes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mateusz Cholewka",
            "email": "mateusz@cholewka.com.pl"
        }
    ],
    "bin": ["bin/releaser"],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "phlak/semver": "^3.2",
        "myclabs/php-enum": "^1.7",
        "munusphp/munus": "^0.4.0",
        "webmozart/assert": "^1.9",
        "symfony/filesystem": "^5.1",
        "guzzlehttp/guzzle": "^7.0",
        "mrrio/shellwrap": "^0.4.1",
        "hassankhan/config": "^2.1",
        "mnapoli/silly-php-di": "^1.2",
        "symfony/yaml": "^5.2@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "v3.4.0",
        "phpstan/phpstan": "^0.12.42",
        "phpmd/phpmd": "^2.11.1",
        "symplify/easy-coding-standard": "10.1.0",
        "composer/xdebug-handler": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MTK\\Releaser\\": "src/",
            "MTK\\Releaser\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixtures/ChangeFixtures.php",
            "tests/Fixtures/ReleaseFixture.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "ecs",
        "check": [
            "@lint",
            "@test"
        ]
    }
}
